// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Compiler {
  id   Int    @id
  name String @unique

  codeTemplates CodeTemplate[]
  codeSolutions CodeSolution[]
}

model Problem {
  id          Int    @id
  name        String
  description String

  codeSolutions CodeSolution[]
  codeTemplates CodeTemplate[]
}

model CodeTemplate {
  compilerId Int
  problemId  Int
  template   String

  problem  Problem  @relation(fields: [problemId], references: [id])
  compiler Compiler @relation(fields: [compilerId], references: [id])

  @@id([problemId, compilerId])
}

model CodeSolution {
  problemId  Int
  compilerId Int
  solution   String

  problem  Problem  @relation(fields: [problemId], references: [id])
  compiler Compiler @relation(fields: [compilerId], references: [id])

  @@id([problemId, compilerId])
}

model School {
  id      Int       @id
  name    String
  Student Student[]
}

model Student {
  id       Int    @id
  name     String
  schoolId Int

  school School @relation(fields: [schoolId], references: [id])
}
